if [ "$(uname)" '==' "Darwin" ]; then
    alias ls='ls -G'
elif [ "$(expr substr $(uname -s) 1 5)" '==' "Linux" ]; then
    alias ls='ls --color=auto'
fi

alias p='python'
alias l='ls -laxoh'
alias t='tmux'
alias ..='cd ..'
alias history='history 1'
alias hgrep='history | grep'
alias dgrep='grep -r'

alias g='git'
alias gco='git checkout'
alias gs='git status'
alias gb='git branch'
alias gl='log'
alias ga='git add -p'
alias gd='git diff --color --color-words --abbrev'
alias gdc='git diff --cached'
alias gpo='git push origin HEAD'
alias gph='git push heroku HEAD'

alias gun='gunicorn app:app'
alias v='source venv/bin/activate'
alias freeze='pip freeze > requirements.txt'

alias basketball='cd ~/Dropbox/dev/basketball'
alias eidetic='cd ~/dev/go/src/github.com/heroku/go-getting-started'
