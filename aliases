if [ "$(uname)" '==' "Darwin" ]; then
    alias ls='ls -G'
elif [ "$(expr substr $(uname -s) 1 5)" '==' "Linux" ]; then
    alias ls='ls --color=auto'
fi

alias weather='weather -hide-icon'

