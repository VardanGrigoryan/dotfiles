[core]
    excludesfile = ~/dotfiles/git/gitignore

# so much color
[color]
    ui = always
    pager = true
    diff = always

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = opendiff

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current

[init]
    templatedir = ~/dotfiles/git/template
[user]
    name = Lawrence Wu
    email = lawrence@lawrencewu.me
[pull]
	rebase = false
